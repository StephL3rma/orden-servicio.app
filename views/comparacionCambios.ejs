<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Comparación de Cambios - Orden #<%= orden.folio || orden.id %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .cambio { background-color: #fff3cd; }
        .sin-cambio { background-color: #d1e7dd; }
        .sin-dato { color: #999; font-style: italic; }
        .header-admin { background-color: #e7f3ff; }
        .header-tecnico { background-color: #f0f0f0; }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Comparación de Cambios - Orden #<%= orden.folio || orden.id %></h2>
            <form action="/historial" method="post">
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al historial
                </button>
            </form>
        </div>

        <%
            const tiposServicioMap = {
                '1': 'Recolección', '2': 'Diagnóstico', '3': 'Mantenimiento',
                '4': 'Puesta en marcha', '5': 'Reparación', '6': 'Instalación', '7': 'Otro'
            };
            const tipoEquipoMap = {'1': 'Centro de Lavado', '2': 'Centro de Secado', '3': 'Lavadora', '4': 'Secadora'};
            const marcaMap = {'1': 'ADC', '2': 'DANUBE', '3': 'LG', '4': 'MAYTAG'};

            // Convertir tipos de servicio a nombres
            const tiposIniciales = datosIniciales && datosIniciales.tipos_servicio
                ? datosIniciales.tipos_servicio.map(t => tiposServicioMap[String(t)]).join(', ')
                : null;
            const tiposFinales = tiposActuales.length > 0
                ? tiposActuales.map(t => tiposServicioMap[String(t)]).join(', ')
                : null;

            // Función para comparar valores
            function compararValor(inicial, actual) {
                if (!inicial && !actual) return 'sin-dato';
                if (String(inicial) !== String(actual)) return 'cambio';
                return 'sin-cambio';
            }

            function mostrarValor(val, tipo) {
                if (!val && val !== 0) return '<span class="sin-dato">(sin dato)</span>';
                if (tipo === 'tipo_equipo') return tipoEquipoMap[String(val)] || val;
                if (tipo === 'marca') return marcaMap[String(val)] || val;
                return val;
            }
        %>

        <% if (!datosIniciales) { %>
            <div class="alert alert-info">
                Esta orden no tiene datos iniciales del admin. Fue creada antes de implementar el sistema de comparación.
            </div>
        <% } else { %>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 30%">Campo</th>
                    <th class="header-admin" style="width: 35%">Datos iniciales (Admin)</th>
                    <th class="header-tecnico" style="width: 35%">Datos finales (Técnico)</th>
                </tr>
            </thead>
            <tbody>
                <tr class="<%= compararValor(tiposIniciales, tiposFinales) %>">
                    <td><strong>Tipos de servicio</strong></td>
                    <td><%- mostrarValor(tiposIniciales) %></td>
                    <td><%- mostrarValor(tiposFinales) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.id_tipo_equipo, orden.id_tipo_equipo) %>">
                    <td><strong>Tipo de equipo</strong></td>
                    <td><%- mostrarValor(datosIniciales.id_tipo_equipo, 'tipo_equipo') %></td>
                    <td><%- mostrarValor(orden.id_tipo_equipo, 'tipo_equipo') %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.id_marca, orden.id_marca) %>">
                    <td><strong>Marca</strong></td>
                    <td><%- mostrarValor(datosIniciales.id_marca, 'marca') %></td>
                    <td><%- mostrarValor(orden.id_marca, 'marca') %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.modelo, orden.modelo) %>">
                    <td><strong>Modelo</strong></td>
                    <td><%- mostrarValor(datosIniciales.modelo) %></td>
                    <td><%- mostrarValor(orden.modelo) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.serie, orden.serie) %>">
                    <td><strong>Número de serie</strong></td>
                    <td><%- mostrarValor(datosIniciales.serie) %></td>
                    <td><%- mostrarValor(orden.serie) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.volts, orden.volts) %>">
                    <td><strong>Voltaje</strong></td>
                    <td><%- mostrarValor(datosIniciales.volts) %></td>
                    <td><%- mostrarValor(orden.volts) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.amperes, orden.amperes) %>">
                    <td><strong>Amperaje</strong></td>
                    <td><%- mostrarValor(datosIniciales.amperes) %></td>
                    <td><%- mostrarValor(orden.amperes) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.watts, orden.watts) %>">
                    <td><strong>Watts</strong></td>
                    <td><%- mostrarValor(datosIniciales.watts) %></td>
                    <td><%- mostrarValor(orden.watts) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.presion_agua, orden.presion_agua) %>">
                    <td><strong>Presión de agua</strong></td>
                    <td><%- mostrarValor(datosIniciales.presion_agua) %></td>
                    <td><%- mostrarValor(orden.presion_agua) %></td>
                </tr>
                <tr class="<%= compararValor(datosIniciales.descripcion_falla, orden.descripcion_falla) %>">
                    <td><strong>Falla reportada</strong></td>
                    <td><%- mostrarValor(datosIniciales.descripcion_falla) %></td>
                    <td><%- mostrarValor(orden.descripcion_falla) %></td>
                </tr>
            </tbody>
        </table>

        <% } %>

    </div>
</body>
</html>
